mixin link_style(url)
    link(href=url rel="stylesheet")

mixin empty-li(n)
    - for(var i = 0; i < n; i++)
        li(style="color:transparent") 1

mixin font-words
    - var words = ["music", "sound", "vinyl", "love", "creativity", "hipster", "songs", "notes"];
    each val in words
        li= val
    each val in words
        li= val

mixin animation
    div.animation
        - for(var i = 0; i < 8; i++)
            div

doctype html
