        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1.0,maximum-scale=1")
        title The Band
        +link_style("css/normalize.css")
        +link_style("css/style-band.css")
        +link_style("https://fonts.googleapis.com/css?family=Lora:400,400i,700")
        +link_style("https://fonts.googleapis.com/css?family=Oswald:300,400,700")

